{{#extend "layout"}}

{{#content "body"}}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {{#form "/signup" class="signup-form"}}
            <div class="form-group">
                {{label "firstname" "Please enter your first name"}}
                {{input "firstname" "" class="form-control"}}
            </div>
            <div class="form-group">
                {{label "lastname" "Please enter your last name"}}
                {{input "lastname" "" class="form-control" }}
            </div>
            <div class="form-group">
                {{label "email" "Please enter your email address"}}
                {{input "email" "" class="form-control"}}
            </div>
            {{submit "save" "Signup!" class="btn btn-primary"}}
        {{/form}}
    </div>
</div>
{{/content}}

{{/extend}}